{
    "env": {
        "es2021": true,
        "node": true
    },
    "extends": [
        "airbnb-base"
    ],
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "rules": {
        "import/extensions": [
            "error",
            {
                "js": "ignorePackages"
            }
        ],
        "import/prefer-default-export": "off",
        "linebreak-style": "off",
        "no-unused-vars": "off",
        "consistent-return": "off",
        "no-unsafe-optional-chaining": "off"
    }
}
